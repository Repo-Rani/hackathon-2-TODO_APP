{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://todo-app.event-schemas/task-updated/v1.0",
  "title": "Task Updated Event",
  "description": "Event published when a task is modified",
  "type": "object",
  "required": ["event_type", "event_id", "timestamp", "version", "data"],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "task-updated",
      "description": "Type of the event"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "version": {
      "type": "string",
      "const": "1.0",
      "description": "Event schema version (semver)"
    },
    "data": {
      "type": "object",
      "required": ["task_id", "user_id", "changed_fields"],
      "properties": {
        "task_id": {
          "type": "integer",
          "description": "Unique identifier of the updated task"
        },
        "user_id": {
          "type": "string",
          "description": "User ID who owns this task"
        },
        "changed_fields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of fields that were changed"
        },
        "old_values": {
          "type": "object",
          "description": "Previous values of changed fields"
        },
        "new_values": {
          "type": "object",
          "description": "New values of changed fields"
        }
      }
    }
  }
}
